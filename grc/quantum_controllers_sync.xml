<?xml version="1.0"?>
<block>
	<name>Sync Qubit</name>
	<key>quantum_controllers_sync</key>
	<category>[Quantum]/controllers</category>
	<import>import quantum</import>
	<make>quantum.controllers_Sync()</make>

	<param>
		<name>Num Inputs</name>
		<key>num_inputs</key>
		<value>2</value>
		<type>int</type>
	</param>

	<sink>
		<name>sync_in</name>
		<type>message</type>
		<nports>$num_inputs</nports>
	</sink>
	<source>
		<name>sync_out</name>
		<type>message</type>
	</source>

</block>

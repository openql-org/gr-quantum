<?xml version="1.0"?>
<block>
	<name>H</name>
	<key>quantum_gates_H</key>
	<category>[Quantum]/gates</category>
	<import>import quantum</import>
	<make>quantum.gates_H($freq, $I_amp, $Q_amp, $I_bw, $Q_bw, $proc_time, $samp_rate, $showWAVEports)</make>
	<callback>set_frequency($freq)</callback>
	<callback>set_I_amplitude($I_amp)</callback>
	<callback>set_Q_amplitude($Q_amp)</callback>
	<callback>set_I_Bandwidth($I_bw)</callback>
	<callback>set_Q_Bandwidth($Q_bw)</callback>
	<callback>set_processing_time_ns($proc_time)</callback>

	<param>
		<name>Frequency</name>
		<key>freq</key>
		<value>1000</value>
		<type>real</type>
	</param>
	<param>
		<name>I Amplitude</name>
		<key>I_amp</key>
		<value>1.0</value>
		<type>float</type>
	</param>
	<param>
		<name>Q Amplitude</name>
		<key>Q_amp</key>
		<value>1.0</value>
		<type>float</type>
	</param>
	<param>
		<name>I Bandwidth</name>
		<key>I_bw</key>
		<value>1</value>
		<type>real</type>
	</param>
	<param>
		<name>Q Bandwidth</name>
		<key>Q_bw</key>
		<value>1</value>
		<type>real</type>
	</param>
	<param>
		<name>Processing Time(ns)</name>
		<key>proc_time</key>
		<value>10000</value>
		<type>real</type>
	</param>
	<param>
		<name>Sample Rate</name>
		<key>samples_per_second</key>
		<value>samp_rate</value>
		<type>real</type>
	</param>
	<param>
		<name>Show IQ Wave out Port</name>
		<key>showWAVEports</key>
		<value>True</value>
		<type>enum</type>
		<hide>part</hide>
		<option>
			<name>Yes</name>
			<key>False</key>
		</option>
		<option>
			<name>No</name>
			<key>True</key>
		</option>
	</param>

	<sink>
		<name>in</name>
		<type>message</type>
	</sink>

	<source>
		<name>out</name>
		<type>message</type>
	</source>
	<source>
		<name>I_wave</name>
		<type>float</type>
		<optional>1</optional>
		<hide>$showWAVEports</hide>
	</source>
	<source>
		<name>Q_wave</name>
		<type>float</type>
		<optional>1</optional>
		<hide>$showWAVEports</hide>
	</source>

</block>

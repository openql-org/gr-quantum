<?xml version="1.0"?>
<block>
	<name>CTRL Junction Point</name>
	<key>quantum_gates_junction</key>
	<category>[Quantum]/gates</category>
	<import>import quantum</import>
	<make>quantum.gates_junction($wait_time)</make>
	<callback>set_wait_time_ns($wait_time)</callback>

	<param>
		<name>Wait Time(ns)</name>
		<key>wait_time</key>
		<value>0</value>
		<type>real</type>
	</param>

	<sink>
		<name>in</name>
		<type>message</type>
	</sink>
	<sink>
		<name>CTRL_port</name>
		<type>message</type>
	</sink>

	<source>
		<name>out</name>
		<type>message</type>
	</source>

</block>
